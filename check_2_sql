# Создадим временную таблицу data, с использованием оконной функции со столбцами count_client_id (id клиентов), contract (договоры клиентов), gender (пол клиента)


mysql> CREATE TEMPORARY TABLE IF NOT EXISTS data AS (SELECT loans_tablevalues.client_id as count_client_id, ROW_NUMBER() OVER(partition BY loans_tablevalues.client_id ) contract, clients_table.gender
    -> FROM loans_tablevalues, clients_table
    -> WHERE loans_tablevalues.client_id = clients_table.client_id
    -> );

mysql> select * from data;
+-----------------+----------+--------+
| count_client_id | contract | gender |
+-----------------+----------+--------+
|               1 |        1 | male   |
|               1 |        2 | male   |
|               1 |        3 | male   |
|               1 |        4 | male   |
|               1 |        5 | male   |
|               1 |        6 | male   |
|               1 |        7 | male   |
|               1 |        8 | male   |
|               2 |        1 | female |
|               2 |        2 | female |
|               2 |        3 | female |
|               3 |        1 | female |
|               3 |        2 | female |
|               4 |        1 | male   |
+-----------------+----------+--------+


mysql> SET @sql = (SELECT GROUP_CONCAT(DISTINCT CONCAT('count(case WHEN contract = "', contract, '" THEN contract END) as "Количество ', contract,' договоров, оформленных в 2020" '))
    -> from data
    -> );
Query OK, 0 rows affected (0.00 sec)

mysql> SET @sql = concat('select gender, ', @sql, ' from data group by gender');
Query OK, 0 rows affected (0.00 sec)

mysql> prepare stmt from @sql;
Query OK, 0 rows affected (0.01 sec)
Statement prepared

mysql> execute stmt;
